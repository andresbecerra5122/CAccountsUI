<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.caccounts.BankAccountController">
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <!-- Tab 1: Checking Account -->
        <Tab text="Checking Account">
            <VBox>
                <Label text="Balance: $" fx:id="checkingBalanceLabel" />
                <Label text="Currency: " fx:id="checkingCurrencyLabel" />
                <!-- Add other checking account-related components here -->
            </VBox>
        </Tab>

        <!-- Tab 2: Convert Account -->
        <Tab text="Convert Account">
            <VBox>
                <Label text="Balance: $" fx:id="convertBalanceLabel" />
                <Label text="Currency: " fx:id="convertCurrencyLabel" />
                <!-- Add other convert account-related components here -->
            </VBox>
        </Tab>

        <!-- Tab 3: Savings Account -->
        <Tab text="Savings Account">
            <VBox>
                <Label text="Balance: $" fx:id="savingsBalanceLabel" />
                <Label text="Currency: " fx:id="savingsCurrencyLabel" />
                <!-- Add other savings account-related components here -->
            </VBox>
        </Tab>
    </TabPane>
</VBox>
